# Application Settings
APP_NAME=Face Recognition Service
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./frs_database.db

# Model Settings
DETECTION_MODEL=retinaface
EMBEDDING_MODEL=arcface
DETECTION_THRESHOLD=0.8
RECOGNITION_THRESHOLD=0.6
TOP_K_RESULTS=5

# Optimization
USE_ONNX=True
USE_FAISS=True
BATCH_SIZE=1
NUM_WORKERS=4

# Storage
GALLERY_DIR=./data/gallery
UPLOAD_DIR=./data/uploads
MODEL_DIR=./models

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/frs.log
